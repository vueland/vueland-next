{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "strict": true,
    "noEmit": false,
    "allowJs": true,
    "removeComments": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "strictFunctionTypes": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": false,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./",
    "declarationDir": "dist/types",
    "outDir": "./dist",
    "composite": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "types": [
    "@vue/compiler-core/dist/compiler-core",
    "@vue/compiler-dom/dist/compiler-dom",
    "@vue/compiler-sfc/dist/compiler-sfc",
    "@vue/compiler-ssr/dist/compiler-ssr",
    "@vue/reactivity/dist/reactivity",
    "@vue/runtime-core/dist/runtime-core",
    "@vue/runtime-dom/dist/runtime-dom",
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.vue",
    "./types"
  ],
  "exclude": [
    "node_modules",
    "dev/**/*.ts",
    "src/**/*.spec.ts"
  ]
}
